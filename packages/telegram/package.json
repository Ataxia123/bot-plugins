{
  "name": "@bot-plugins/telegram",
  "version": "0.0.0",
  "description": "An telegram provider for Bot plugins framework",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "rimraf dist && pnpm build:cjs && pnpm build:esm",
    "prerelease": "pnpm build && pnpm test",
    "release": "pnpm publish"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts"
    }
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "dependencies": {
    "@bot-whatsapp/bot": "workspace:*",
    "dotenv": "^16.4.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "telegraf": "^4.15.3",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codigoencasa/bot-whatsapp/tree/main/packages/telegram"
  },
  "packageManager": "pnpm@8.12.1",
  "devDependencies": {
    "@types/jest": "^29.5.12"
  }
}